<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.Cursor?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<BorderPane maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity"
    prefHeight="600.0" prefWidth="800.0" styleClass="background" stylesheets="@styles.css"
    xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1"
    fx:controller="com.koteseni.ijaproj.controller.MainMenuController">
    <center>
        <VBox alignment="CENTER" prefHeight="290.0" prefWidth="516.0" spacing="20.0"
            BorderPane.alignment="CENTER">
            <children>
                <ImageView pickOnBounds="true" preserveRatio="true">
                    <image>
                        <Image url="@../images/game-title.png" />
                    </image>
                    <VBox.margin>
                        <Insets bottom="10.0" top="10.0" />
                    </VBox.margin>
                </ImageView>
                <Button fx:id="new_game_button" mnemonicParsing="false"
                    onAction="#handleNewGameButton" prefHeight="40.0" prefWidth="200.0"
                    text="New Game" style="-fx-font-size: 18px;">
                    <cursor>
                        <Cursor fx:constant="HAND" />
                    </cursor>
                </Button>
                <Button fx:id="replay_game_button" mnemonicParsing="false"
                    onAction="#handleReplayGameButton" prefHeight="40.0" prefWidth="200.0"
                    text="Replay Game" style="-fx-font-size: 18px;">
                    <cursor>
                        <Cursor fx:constant="HAND" />
                    </cursor>
                </Button>
                <Button fx:id="exit_button" mnemonicParsing="false" onAction="#handleExitButton"
                    prefHeight="40.0" prefWidth="200.0" text="Exit" style="-fx-font-size: 18px;">
                    <cursor>
                        <Cursor fx:constant="HAND" />
                    </cursor>
                </Button>
                <Label text="Lukas Pseja (xpsejal00)" textAlignment="CENTER"
                    style="-fx-font-size: 18px; -fx-font-weight: bold;">
                </Label>
                <Label text="Vaclav Sovak (xsovakv00)" textAlignment="CENTER"
                    style="-fx-font-size: 18px; -fx-font-weight: bold;">
                </Label>
            </children>
            <BorderPane.margin>
                <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
            </BorderPane.margin>
        </VBox>
    </center>
</BorderPane>