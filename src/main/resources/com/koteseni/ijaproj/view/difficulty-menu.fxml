<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.Cursor?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<BorderPane maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity"
    prefHeight="600.0" prefWidth="800.0" xmlns="http://javafx.com/javafx/23.0.1"
    xmlns:fx="http://javafx.com/fxml/1"
    fx:controller="com.koteseni.ijaproj.controller.DifficultyController">
    <center>
        <VBox alignment="CENTER" spacing="15.0" BorderPane.alignment="CENTER">
            <children>
                <Label text="Select Difficulty">
                    <font>
                        <Font name="System Bold" size="40.0" />
                    </font>
                </Label>
                <Button fx:id="easy_button" mnemonicParsing="false" onAction="#handleEasyButton"
                    prefHeight="50.0" prefWidth="200.0" text="Easy" textFill="#09fea3">
                    <font>
                        <Font size="18.0" />
                    </font>
                    <cursor>
                        <Cursor fx:constant="HAND" />
                    </cursor>
                </Button>
                <Button fx:id="medium_button" mnemonicParsing="false" onAction="#handleMediumButton"
                    prefHeight="50.0" prefWidth="200.0" text="Medium" textFill="#ffa400">
                    <font>
                        <Font size="18.0" />
                    </font>
                    <cursor>
                        <Cursor fx:constant="HAND" />
                    </cursor>
                </Button>
                <Button fx:id="hard_button" mnemonicParsing="false" onAction="#handleHardButton"
                    prefHeight="50.0" prefWidth="200.0" text="Hard" textFill="#f91900">
                    <font>
                        <Font size="18.0" />
                    </font>
                    <cursor>
                        <Cursor fx:constant="HAND" />
                    </cursor>
                </Button>
                <Button fx:id="hardcore_button" mnemonicParsing="false"
                    onAction="#handleHardcoreButton" prefHeight="50.0" prefWidth="200.0"
                    text="Hardcore" textFill="#cc0038">
                    <font>
                        <Font size="18.0" />
                    </font>
                    <cursor>
                        <Cursor fx:constant="HAND" />
                    </cursor>
                </Button>
                <Button fx:id="back_button" mnemonicParsing="false" onAction="#handleBackButton"
                    prefHeight="30.0" prefWidth="120.0" text="Back">
                    <font>
                        <Font size="14.0" />
                    </font>
                    <VBox.margin>
                        <Insets top="20.0" />
                    </VBox.margin>
                    <cursor>
                        <Cursor fx:constant="HAND" />
                    </cursor>
                </Button>
            </children>
        </VBox>
    </center>
</BorderPane>