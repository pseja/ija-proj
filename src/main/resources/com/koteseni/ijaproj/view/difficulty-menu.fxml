<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.Cursor?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<BorderPane maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity"
    prefHeight="600.0" prefWidth="800.0" styleClass="background" stylesheets="@styles.css"
    xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1"
    fx:controller="com.koteseni.ijaproj.controller.DifficultyController">
    <center>
        <VBox alignment="CENTER" spacing="15.0" BorderPane.alignment="CENTER">
            <children>
                <Label text="Select Difficulty" style="-fx-font-size: 40px;">
                </Label>
                <Button fx:id="easy_button" mnemonicParsing="false" onAction="#handleEasyButton"
                    prefHeight="50.0" prefWidth="200.0" text="Easy" style="-fx-font-size: 18px;">
                    <cursor>
                        <Cursor fx:constant="HAND" />
                    </cursor>
                </Button>
                <Button fx:id="medium_button" mnemonicParsing="false" onAction="#handleMediumButton"
                    prefHeight="50.0" prefWidth="200.0" text="Medium" style="-fx-font-size: 18px;">
                    <cursor>
                        <Cursor fx:constant="HAND" />
                    </cursor>
                </Button>
                <Button fx:id="hard_button" mnemonicParsing="false" onAction="#handleHardButton"
                    prefHeight="50.0" prefWidth="200.0" text="Hard" style="-fx-font-size: 18px;">
                    <cursor>
                        <Cursor fx:constant="HAND" />
                    </cursor>
                </Button>
                <Button fx:id="hardcore_button" mnemonicParsing="false"
                    onAction="#handleHardcoreButton" prefHeight="50.0" prefWidth="200.0"
                    text="Hardcore" style="-fx-font-size: 18px;">
                    <cursor>
                        <Cursor fx:constant="HAND" />
                    </cursor>
                </Button>
                <Button fx:id="back_button" mnemonicParsing="false" onAction="#handleBackButton"
                    prefHeight="30.0" prefWidth="120.0" text="Back" style="-fx-font-size: 14px;">
                    <VBox.margin>
                        <Insets top="20.0" />
                    </VBox.margin>
                    <cursor>
                        <Cursor fx:constant="HAND" />
                    </cursor>
                </Button>
            </children>
        </VBox>
    </center>
</BorderPane>